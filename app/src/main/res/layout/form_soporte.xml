<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Form_Soporte">

    <ImageView
        android:id="@+id/background2"
        android:layout_width="417dp"
        android:layout_height="748dp"
        android:alpha=".70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <EditText
        android:id="@+id/txtbuscarPodcast2"
        android:layout_width="326dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:alpha=".75"
        android:background="@drawable/edit_tex_redondo"
        android:fontFamily="sans-serif-black"
        android:hint="@string/buscar_podcast"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMedio"
        android:layout_width="328dp"
        android:layout_height="132dp"
        android:layout_marginTop="4dp"
        android:alpha=".80"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbuscarPodcast2"
        tools:ignore="MissingConstraints" >

        <TextView
            android:id="@+id/labelActualmente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:breakStrategy="simple"
            android:contentDescription="Soporte de la Aplicacion elija la opcion que necesita"
            android:fontFamily="sans-serif-black"
            android:paddingTop="35dp"
            android:text="@string/soporte_podcast"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnWhatsapp"
        android:layout_width="326dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/amarillo_dark"
        android:fontFamily="sans-serif-black"
        android:text="Enviar mensaje por Whatsapp"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/background2"
        app:layout_constraintTop_toBottomOf="@+id/cardViewMedio"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_email"
        android:layout_width="326dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/celeste"
        android:fontFamily="sans-serif-black"
        android:text="Enviar correo electrÃ³nico"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWhatsapp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_web"
        android:layout_width="326dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/rojo_dark"
        android:fontFamily="sans-serif-black"
        android:text="Visitar Sitio web"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_email"
        tools:ignore="MissingConstraints" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="415dp"
        android:layout_height="62dp"
        android:alpha=".80"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnSoporte"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:srcCompat="@drawable/icono_soporte"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnUsuario"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:srcCompat="@drawable/icono_usuario"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnFavorito"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:srcCompat="@drawable/icono_favorito"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnInicio"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:background="@null"
            app:srcCompat="@drawable/icono_home"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>